<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Listings - Rent My Ride</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-100 font-sans text-gray-800">

  <header class="bg-white shadow-md sticky top-0 z-10">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <img src="data:image/jpeg;base64," alt="Rent My Ride Logo" class="h-10 w-auto">
      <h1 class="text-xl font-bold text-red-600">Rent My Ride</h1>
      <div class="space-x-2">
        <button onclick="window.location.href='/listings'" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">All</button>
        <button onclick="window.location.href='/listings/my-listings'" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">My Listings</button>
        <button onclick="window.location.href='/listings/new'" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded">Create</button>
        <button onclick="window.location.href='/listings/search'" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded">Search</button>
        <button onclick="window.location.href='/listings/filter'" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded">Filter</button>
        <button onclick="window.location.href='/listings/sort'" class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded">Sort</button>
      </div>
    </div>
  </header>

  <main class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-semibold mb-6 text-center">Search Listings</h2>

    <!-- Search Form -->
    <div class="bg-white shadow-lg rounded-lg p-6 mb-8">
      <form method="GET" action="/listings/search" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <!-- Text Search -->
          <div>
            <label for="q" class="block text-sm font-medium text-gray-700 mb-1">Search Keywords</label>
            <input type="text" id="q" name="q" value="<%= searchParams && searchParams.q ? searchParams.q : '' %>"
                   placeholder="Search in title and description..."
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
          </div>

          <!-- Location -->
          <div>
            <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
            <input type="text" id="location" name="location" value="<%= searchParams && searchParams.location ? searchParams.location : '' %>"
                   placeholder="Enter location..."
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
          </div>

          <!-- Price Range -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Price Range</label>
            <div class="flex space-x-2">
              <input type="number" name="minPrice" value="<%= searchParams && searchParams.minPrice ? searchParams.minPrice : '' || '' %>"
                     placeholder="Min"
                     class="w-1/2 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <input type="number" name="maxPrice" value="<%= searchParams && searchParams.maxPrice ? searchParams.maxPrice : '' || '' %>"
                     placeholder="Max"
                     class="w-1/2 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>
          </div>

          <!-- Fuel Type -->
          <div>
            <label for="fuelType" class="block text-sm font-medium text-gray-700 mb-1">Fuel Type</label>
            <select id="fuelType" name="fuelType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <option value="all" <%= searchParams && searchParams.fuelType ? searchParams.fuelType : '' === 'all' || !searchParams && searchParams.fuelType ? searchParams.fuelType : '' ? 'selected' : '' %>>All</option>
              <option value="Petrol" <%= searchParams && searchParams.fuelType ? searchParams.fuelType : '' === 'Petrol' ? 'selected' : '' %>>Petrol</option>
              <option value="Diesel" <%= searchParams && searchParams.fuelType ? searchParams.fuelType : '' === 'Diesel' ? 'selected' : '' %>>Diesel</option>
              <option value="Electric" <%= searchParams && searchParams.fuelType ? searchParams.fuelType : '' === 'Electric' ? 'selected' : '' %>>Electric</option>
              <option value="Hybrid" <%= searchParams && searchParams.fuelType ? searchParams.fuelType : '' === 'Hybrid' ? 'selected' : '' %>>Hybrid</option>
            </select>
          </div>

          <!-- Transmission -->
          <div>
            <label for="transmission" class="block text-sm font-medium text-gray-700 mb-1">Transmission</label>
            <select id="transmission" name="transmission" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <option value="all" <%= searchParams && searchParams.transmission ? searchParams.transmission : '' === 'all' || !searchParams && searchParams.transmission ? searchParams.transmission : '' ? 'selected' : '' %>>All</option>
              <option value="Manual" <%= searchParams && searchParams.transmission ? searchParams.transmission : '' === 'Manual' ? 'selected' : '' %>>Manual</option>
              <option value="Automatic" <%= searchParams && searchParams.transmission ? searchParams.transmission : '' === 'Automatic' ? 'selected' : '' %>>Automatic</option>
            </select>
          </div>

          <!-- Vehicle Type -->
          <div>
            <label for="vehicleType" class="block text-sm font-medium text-gray-700 mb-1">Vehicle Type</label>
            <select id="vehicleType" name="vehicleType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <option value="all" <%= searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' === 'all' || !searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' ? 'selected' : '' %>>All</option>
              <option value="Car" <%= searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' === 'Car' ? 'selected' : '' %>>Car</option>
              <option value="Truck" <%= searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' === 'Truck' ? 'selected' : '' %>>Truck</option>
              <option value="Motorcycle" <%= searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' === 'Motorcycle' ? 'selected' : '' %>>Motorcycle</option>
              <option value="Van" <%= searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' === 'Van' ? 'selected' : '' %>>Van</option>
              <option value="SUV" <%= searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' === 'SUV' ? 'selected' : '' %>>SUV</option>
              <option value="Bus" <%= searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' === 'Bus' ? 'selected' : '' %>>Bus</option>
              <option value="Bicycle" <%= searchParams && searchParams.vehicleType ? searchParams.vehicleType : '' === 'Bicycle' ? 'selected' : '' %>>Bicycle</option>
            </select>
          </div>

          <!-- Seats -->
          <div>
            <label for="seats" class="block text-sm font-medium text-gray-700 mb-1">Number of Seats</label>
            <select id="seats" name="seats" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
              <option value="all" <%= searchParams && searchParams.seats ? searchParams.seats : '' === 'all' || !searchParams && searchParams.seats ? searchParams.seats : '' ? 'selected' : '' %>>All</option>
              <option value="1" <%= searchParams && searchParams.seats ? searchParams.seats : '' === '1' ? 'selected' : '' %>>1</option>
              <option value="2" <%= searchParams && searchParams.seats ? searchParams.seats : '' === '2' ? 'selected' : '' %>>2</option>
              <option value="4" <%= searchParams && searchParams.seats ? searchParams.seats : '' === '4' ? 'selected' : '' %>>4</option>
              <option value="5" <%= searchParams && searchParams.seats ? searchParams.seats : '' === '5' ? 'selected' : '' %>>5</option>
              <option value="7" <%= searchParams && searchParams.seats ? searchParams.seats : '' === '7' ? 'selected' : '' %>>7</option>
              <option value="9" <%= searchParams && searchParams.seats ? searchParams.seats : '' === '9' ? 'selected' : '' %>>9</option>
            </select>
          </div>
        </div>

        <div class="flex justify-center space-x-4 pt-4">
          <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-2 rounded-md font-medium">
            <i class="fas fa-search mr-2"></i>Search
          </button>
          <a href="/listings/search" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-md font-medium">
            <i class="fas fa-times mr-2"></i>Clear
          </a>
        </div>
      </form>
    </div>

    <!-- Search Results -->
    <% if (allListings && allListings.length > 0) { %>
      <div class="mb-4">
        <h3 class="text-xl font-semibold text-gray-800">Search Results (<%= allListings.length %> found)</h3>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% for(let listing of allListings) { %>
          <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <img src="<%= listing.image %>" alt="<%= listing.title %>" class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-bold text-gray-800 mb-2"><%= listing.title %></h3>
              <p class="text-sm text-gray-600 mb-2"><%= listing.description %></p>
              <div class="flex justify-between items-center mb-2">
                <p class="text-lg font-semibold text-blue-600">&#8377;<%= listing.price %></p>
                <% if (listing.seats) { %>
                  <span class="text-sm text-gray-500"><i class="fas fa-users mr-1"></i><%= listing.seats %> seats</span>
                <% } %>
              </div>
              <% if (listing.fuelType || listing.transmission) { %>
                <div class="flex justify-between text-sm text-gray-500 mb-2">
                  <% if (listing.fuelType) { %>
                    <span><i class="fas fa-gas-pump mr-1"></i><%= listing.fuelType %></span>
                  <% } %>
                  <% if (listing.transmission) { %>
                    <span><i class="fas fa-cogs mr-1"></i><%= listing.transmission %></span>
                  <% } %>
                </div>
              <% } %>
              <% if (listing.location) { %>
                <p class="text-sm text-gray-500 mb-3"><i class="fas fa-map-marker-alt mr-1"></i><%= listing.location %></p>
              <% } %>
              <a href="/listings/<%= listing._id %>" class="inline-block w-full text-center text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded">
                View Details
              </a>
            </div>
          </div>
        <% } %>
      </div>
    <% } else if (searchParams && (searchParams.q || searchParams.location || searchParams.minPrice || searchParams.maxPrice || searchParams.fuelType !== 'all' || searchParams.transmission !== 'all' || searchParams.vehicleType !== 'all' || searchParams.seats !== 'all')) { %>
      <div class="text-center py-8">
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <i class="fas fa-search text-yellow-500 text-4xl mb-4"></i>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">No Results Found</h3>
          <p class="text-gray-600">No listings match your search criteria. Try adjusting your filters.</p>
        </div>
      </div>
    <% } else { %>
      <div class="text-center py-8">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
          <i class="fas fa-search text-blue-500 text-4xl mb-4"></i>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">Start Your Search</h3>
          <p class="text-gray-600">Use the search form above to find the perfect vehicle for your needs.</p>
        </div>
      </div>
    <% } %>
  </main>

  <footer class="text-center py-6 text-sm text-gray-500">
    &copy; <%= new Date().getFullYear() %> RentMyRide. All rights reserved.
  </footer>

</body>
</html>