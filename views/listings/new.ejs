<body class="bg-cover bg-center bg-no-repeat" style="background-image: url('https://maserati.scene7.com/is/image/maserati/maserati/international/Brand/mc20-icona-and-leggenda/takeovers/menu-mc20-icona-and-leggenda.jpg?$1920x2000$&fit=constrain');">
<div class="backdrop-blur-md bg-white/30 rounded-lg p-6">
    
  <h1>Create New Listing</h1>
    <bgcolor: #f4f4f4;>
  <form action="/listings" method="POST">
    <!-- Title -->
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>
    <br><br>

    <!-- Image -->
    <label for="image">Image URL:</label>
    <input type="text" id="image" name="image" required>
    <br><br>

    <!-- Price -->
    <label for="price">Price (INR):</label>
    <input type="number" id="price" name="price" required>
    <br><br>

    <!-- Description -->
    <label for="description">Description:</label>
    <textarea id="description" name="description" maxlength="500" required></textarea>
    <br><br>

    <!-- Location -->
    <label for="location">Location:</label>
    <input type="text" id="location" name="location" required>
    <br><br>

    <!-- Mileage -->
    <label for="mileage">Mileage (in km):</label>
    <input type="number" id="mileage" name="mileage" min="0" required>
    <br><br>

    <!-- Year -->
    <label for="year">Year of Manufacture:</label>
    <input type="number" id="year" name="year" min="1886" max="2025">
    <br><br>

    <!-- Fuel Type -->
    <label for="fuelType">Fuel Type:</label>
    <select id="fuelType" name="fuelType" required>
      <option value="Petrol">Petrol</option>
      <option value="Diesel">Diesel</option>  
      <option value="Electric">Electric</option>
      <option value="Hybrid">Hybrid</option>
    </select>
    <br><br>

    <!-- Transmission -->
    <label for="transmission">Transmission:</label>
    <select id="transmission" name="transmission" required>
      <option value="Manual">Manual</option>
      <option value="Automatic">Automatic</option>
    </select>
    <br><br>

    <!-- Condition -->
    <label for="condition">Condition:</label>
    <select id="condition" name="condition" required>
      <option value="New">New</option>
      <option value="Used">Used</option>
      <option value="Damaged">Damaged</option>
    </select>
    <br><br>

    <!-- Seats -->
    <label for="seats">Seats:</label>
    <input type="number" id="seats" name="seats" min="1" max="9" required>
    <br><br>

    <!-- Cubic Capacity -->
    <label for="cubicCapacity">Cubic Capacity (cc):</label>
    <input type="number" id="cubicCapacity" name="cubicCapacity" required>
    <br><br>

    <!-- Fuel Efficiency -->
    <label for="fuelEfficiency">Fuel Efficiency (km/l):</label>
    <input type="number" id="fuelEfficiency" name="fuelEfficiency" min="0" required>
    <br><br>

    <!-- Vehicle Type -->
    <label for="vehicleType">Vehicle Type:</label>
    <select id="vehicleType" name="vehicleType">
      <option value="Car">Car</option>
      <option value="Truck">Truck</option>
      <option value="Motorcycle">Motorcycle</option>
      <option value="Van">Van</option>
      <option value="SUV">SUV</option>
      <option value="Bus">Bus</option>
      <option value="Bicycle">Bicycle</option>
    </select>
    <br><br>


    <button type="submit">Create Listing</button>
  </form>
